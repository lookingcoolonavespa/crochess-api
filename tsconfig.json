{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "module": "es6",
    "target": "es5",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["./src/**/*", "tests"],
  "types": ["@types/jest"]
}
